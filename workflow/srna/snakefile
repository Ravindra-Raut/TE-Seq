#tag REPETITIVE ELEMENTS
rule collateBam:
    input:
        sortedBam = "srna/outs/{sample}/star_output/{sample}.sorted.bam"
    output:
        collatedbam = "srna/outs/{sample}/star_output/{sample}.collated.bam",
    conda:
        "omics"
    resources:
        mem_mb  = 128000,
        runtime = 60
    shell:
        """
samtools collate -o {output.collatedbam} {input.sortedBam}
        """

def getTelescopeGff(wildcards):
    if config["per_sample_ref"] == "yes":
        return "aref/{sample}_annotations/{sample}_repeatmasker.gff2"
    else:
        return "aref/A.REF_annotations/A.REF_repeatmasker.gff2"
rule telescope:
    input:
        collatedbam = "srna/outs/{sample}/star_output/{sample}.collated.bam",
        libtype = "srna/qc/library_type.txt",
        gff = getTelescopeGff
    params:
        strandparam = getTelescopeStrandParam()
    output:
        counts = "srna/outs/{sample}/telescope/telescope-run_stats.tsv"
    threads: 4
    conda:
        "telescope3"
    resources:
        mem_mb  = 128000,
        runtime = 600
    shell: 
        """
telescope assign \
--attribute gene_id \
--ncpu 1 \
--stranded_mode {params.strandparam} \
--outdir $(dirname {output.counts}) \
{input.collatedbam} \
{input.gff}
        """



